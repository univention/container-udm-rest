# Source: https://git.knut.univention.de/univention/ucs/-/blob/5.0-4/base/univention-lib/shell/umc.sh#L85
# "umc_init" is called from many join scripts
---
action: create
module: container/cn
position: cn=univention,{{ ldap_base }}
properties:
  name: UMC
---
action: create
module: container/cn
position: cn=policies,{{ ldap_base }}
properties:
  name: UMC
  policyPath: true
---
action: create
module: container/cn
position: cn=UMC,cn=univention,{{ ldap_base }}
properties:
  name: operations
---
action: create
module: policies/umc
position: cn=UMC,cn=policies,{{ ldap_base }}
properties:
  name: default-umc-all
---
action: ensure_list_contains
module: groups/group
position: cn=Domain Admins,cn=groups,{{ ldap_base }}
policies:
  policies/umc:
    - "cn=default-umc-all,cn=UMC,cn=policies,{{ ldap_base }}"
---
action: create
module: policies/umc
position: cn=UMC,cn=policies,{{ ldap_base }}
properties:
  name: default-umc-users
---
action: ensure_list_contains
module: groups/group
position: cn=Domain Users,cn=groups,{{ ldap_base }}
policies:
  policies/umc:
    - "cn=default-umc-users,cn=UMC,cn=policies,{{ ldap_base }}"
